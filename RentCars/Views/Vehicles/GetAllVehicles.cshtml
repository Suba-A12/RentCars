@model IEnumerable<RentCars.Models.Vehicle>
@{
	ViewData["Title"] = "GetAllVehicles";
}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
@foreach (var item in Model)
{
	@* <div class="container mt-4">
		<div class="row row-cols-1 row-cols-md-3 g-4"> *@
			<!-- Product Card Start -->
			<div class="col">
				<div class="card h-100">
					<img src="~/Images/@item.ImageUrl" class="card-img-top" alt="Product Image">
					<div class="card-body">
						<h5 class="card-title">@item.Model</h5>
						<p class="card-text">@item.Type</p>
						<p class="card-text">@item.Mileage</p>
						<p class="card-text">@item.Status</p>
					</div>
					<div class="card-footer">
						<div class="d-flex justify-content-between align-items-center">
							<span class="text-primary fw-bold">SGD @item.DailyRate</span>
						<a asp-controller="Rentals" asp-action="Create" asp-route-id="@item.VehicleId" class="btn btn-sm btn-outline-primary">Book Now</a>
						</div>
					</div>
				</div>
			</div>
}
</div>
