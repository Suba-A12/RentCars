@model IEnumerable<RentCars.Models.Vehicle>
@{
	ViewData["Title"] = "GetAllVehicles";
}
@foreach (var item in Model)
{
	<div class="container mt-4">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			<!-- Product Card Start -->
			<div class="col">
				<div class="card h-100">
					<img src="~/Images/@item.ImageUrl" class="card-img-top" alt="Product Image">
					<div class="card-body">
						<h5 class="card-title">@item.Type</h5>
						<p class="card-text">@item.Model</p>
						<p class="card-text">@item.Mileage</p>
						<p class="card-text">@item.Status</p>
					</div>
					<div class="card-footer">
						<div class="d-flex justify-content-between align-items-center">
							<span class="text-primary fw-bold">SGD @item.DailyRate</span>
							<a asp-action="AddToCart" class="btn btn-sm btn-outline-primary">Add to Cart</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}
